<%- include("partials/header.ejs") %>
<div class="create">
    <form action="/edit-blog" method="POST">
        <div>
        <label for="title">Title</label>
        
        <input type="text" name="title" value="<%= blog.title %>" placeholder="Blog Title" required>
        </div>
        <div>
        <label for="author">Author</label>
        <input type="text" name="author" value="<%= blog.author %>" placeholder="Author" required>
        </div>
        <div>
        <label for="content">Content</label>
        <textarea name="content" ><%= blog.content %></textarea>
        </div>
        <input type="hidden" name="blogIndex" value="<%= index %>">
        <button type="submit">Post</button>
        <!-- <button type="submit" formaction="/allBlogs" method="get">Back</button> -->
    </form>
</div>
